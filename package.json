{
  "name": "real-time-communication-demo",
  "version": "1.0.0",
  "description": "Demo of different real-time communication methods",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run watch:backend\" \"npm run watch:frontend\" \"nodemon\"",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd public && tsc",
    "watch:backend": "tsc -w",
    "watch:frontend": "cd client && tsc -w"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuidv4": "^6.2.13",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
